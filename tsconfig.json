{
    "include": ["./src/**/*"],
    "exclude": ["./tsdown.config.ts"],
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "newLine": "lf",
        "verbatimModuleSyntax": true
    }
}